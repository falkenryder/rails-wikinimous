<div class="container">
  <div class="d-flex justify-content-center m-3">
    <div class="col-6">
      <ul class="list-unstyled">
        <% @articles.each do |article| %>
        <li>

          <h2 class="text-truncate"><%= link_to "#{article.title}", article_path(article) %></h2>
          <p><%= article.content %></p>
        </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
